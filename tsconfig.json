{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "outDir": "./dist",
    "rootDir": "./src", // âœ… only compile files inside src
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "src/*": ["./src/*"]
    },
    "types": ["node", "jest", "passport-local"],
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*" //  removed scripts/ensure-admin.ts to stop compilation error
  ],
  "exclude": [
    "node_modules",
    "dist",
    "scripts/**/*" //  explicitly exclude scripts folder
  ]
}
